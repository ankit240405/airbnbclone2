<% layout("/layouts/boilerplate") %>
<body>
<div class="row mt-3 mx-0">
<div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 px-3">
    <h1 class="text-center mb-4 w-100" style="color: #2c3e50; font-weight: 700; background: linear-gradient(135deg, #fe424d, #ff6b6b); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-size: clamp(1.8rem, 4vw, 2.5rem);">SignUp on SereneStay</h1>
    <form action="/signup" method="POST" class="needs-validation" novalidate style="background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%); padding: clamp(1.5rem, 4vw, 2.5rem); border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); border: 1px solid rgba(255,255,255,0.9); margin: 0 auto;">
<div class="mb-4">
<label for="username" class="form-label" style="font-weight: 600; color: #2c3e50; margin-bottom: 0.5rem; font-size: clamp(0.9rem, 2vw, 1rem);">Username</label>
<input name="username" id="username" type="text" class="form-control" required style="padding: 0.75rem 1rem; border: 2px solid #e9ecef; border-radius: 12px; transition: all 0.3s ease; font-size: clamp(0.9rem, 2vw, 1rem); width: 100%;"/>
<div class="valid-feedback" style="color: #28a745; font-weight: 500; font-size: clamp(0.8rem, 1.5vw, 0.9rem);">looks good!!</div>
</div>  
<div class="mb-4">
<label for="email" class="form-label" style="font-weight: 600; color: #2c3e50; margin-bottom: 0.5rem; font-size: clamp(0.9rem, 2vw, 1rem);">Email</label>
<input name="email" id="email" type="email" class="form-control" required style="padding: 0.75rem 1rem; border: 2px solid #e9ecef; border-radius: 12px; transition: all 0.3s ease; font-size: clamp(0.9rem, 2vw, 1rem); width: 100%;"/>
<div class="valid-feedback" style="color: #28a745; font-weight: 500; font-size: clamp(0.8rem, 1.5vw, 0.9rem);">looks good!!</div>
</div> 
<div class="mb-4">
<label for="password" class="form-label" style="font-weight: 600; color: #2c3e50; margin-bottom: 0.5rem; font-size: clamp(0.9rem, 2vw, 1rem);">Password</label>
<input name="password" id="password" type="password" class="form-control" required style="padding: 0.75rem 1rem; border: 2px solid #e9ecef; border-radius: 12px; transition: all 0.3s ease; font-size: clamp(0.9rem, 2vw, 1rem); width: 100%;"/>
<div class="valid-feedback" style="color: #28a745; font-weight: 500; font-size: clamp(0.8rem, 1.5vw, 0.9rem);">looks good!!</div>
</div>   
<button class="btn btn-success w-100" style="padding: clamp(0.8rem, 2vw, 1rem) clamp(1rem, 3vw, 2rem); font-size: clamp(0.9rem, 2vw, 1.1rem); font-weight: 600; border-radius: 50px; background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important; border: none !important; box-shadow: 0 6px 20px rgba(40, 167, 69, 0.3) !important; transition: all 0.3s ease !important;">SignUp</button>
</form>
</div>
</div>

<style>
.form-control {
    transition: all 0.3s ease !important;
    box-sizing: border-box;
}

.form-control:focus {
    border-color: #fe424d !important;
    box-shadow: 0 0 0 0.2rem rgba(254, 66, 77, 0.15) !important;
    transform: translateY(-2px);
}

.form-control:hover {
    border-color: #fe424d !important;
}

.btn-success:hover {
    transform: translateY(-2px) !important;
    box-shadow: 0 8px 25px rgba(40, 167, 69, 0.4) !important;
    background: linear-gradient(135deg, #20c997 0%, #28a745 100%) !important;
}

.form-label {
    transition: color 0.3s ease;
}

.form-control:focus + .form-label {
    color: #fe424d;
}

.valid-feedback {
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.3s ease;
}

.form-control:valid + .valid-feedback {
    opacity: 1;
    transform: translateY(0);
}

@media (max-width: 768px) {
    .row.mt-3 {
        margin-top: 1rem !important;
    }
    
    .col-12.col-md-8.offset-md-2.col-lg-6.offset-lg-3 {
        padding-left: 15px !important;
        padding-right: 15px !important;
    }
    
    form {
        margin: 0 10px !important;
        padding: 1.25rem !important;
    }
}

@media (max-width: 576px) {
    .row.mt-3 {
        margin-top: 0.5rem !important;
    }
    
    form {
        margin: 0 5px !important;
        padding: 1rem !important;
        border-radius: 15px !important;
    }
    
    .form-control {
        padding: 0.6rem 0.8rem !important;
        border-radius: 10px !important;
    }
    
    .btn-success {
        border-radius: 40px !important;
        padding: 0.7rem 1.5rem !important;
    }
    
    .valid-feedback {
        font-size: 0.75rem !important;
    }
}

@media (max-width: 360px) {
    body {
        font-size: 14px;
    }
    
    form {
        padding: 0.8rem !important;
    }
    
    .mb-4 {
        margin-bottom: 0.8rem !important;
    }
    
    .form-control {
        padding: 0.5rem 0.7rem !important;
    }
}

html, body {
    max-width: 100%;
    overflow-x: hidden;
}

.container-fluid {
    padding-left: 10px;
    padding-right: 10px;
}
</style>
</body>