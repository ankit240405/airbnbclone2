<% layout("/layouts/boilerplate") %>
<body>
<div class="row mt-3 mx-0">
    <div class="col-12 col-md-9 offset-md-2 col-lg-7 offset-lg-2 px-3">
        <h3 class="mb-4 w-100" style="color: #2c3e50; font-weight: 700; background: linear-gradient(135deg, #fe424d, #ff6b6b); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-size: clamp(1.5rem, 4vw, 2.5rem);"><%=listing.title%></h3>
    </div>
    
    <div class="card col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 show-card px-0" style="border-radius: clamp(15px, 3vw, 25px); overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.1); border: none; transition: all 0.4s ease; margin: 0 auto;">
        <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_img" style="border-radius: clamp(15px, 3vw, 25px) clamp(15px, 3vw, 25px) 0 0; height: clamp(250px, 40vh, 400px); object-fit: cover; width: 100%;">
        <div class="card-body" style="padding: clamp(1rem, 3vw, 2rem); background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);">
            <p class="card-text" style="color: #666; font-style: italic; font-size: clamp(0.9rem, 2vw, 1.1rem); margin-bottom: 1rem;">
                <i class="fas fa-user" style="color: #fe424d; margin-right: 0.5rem;"></i>Owned By - <span style="color: #2c3e50; font-weight: 600;"><%=listing.owner.username%></span>
            </p>
            
            <p class="card-text" style="color: #555; line-height: 1.6; font-size: clamp(0.9rem, 2vw, 1.1rem); margin-bottom: 1rem; background: rgba(254, 66, 77, 0.05); padding: clamp(1rem, 2vw, 1.5rem); border-radius: clamp(10px, 2vw, 15px); border-left: 4px solid #fe424d;">
                <%=listing.description%>
            </p>
            
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(clamp(150px, 25vw, 200px), 1fr)); gap: 0.8rem; margin-bottom: 1rem;">
                <p class="card-text" style="color: #fe424d; font-size: clamp(1.1rem, 3vw, 1.5rem); font-weight: 700; background: rgba(254, 66, 77, 0.1); padding: clamp(0.8rem, 2vw, 1rem); border-radius: clamp(8px, 1.5vw, 12px); text-align: center;">
                    &#8377;<%= listing.price != null ? listing.price.toLocaleString("en-IN") : "N/A" %>
                    <br><small style="font-size: clamp(0.7rem, 1.5vw, 0.9rem); color: #666; font-weight: 500;">per night</small>
                </p>
                
                <p class="card-text" style="color: #2c3e50; font-size: clamp(0.9rem, 2vw, 1.1rem); background: rgba(52, 152, 219, 0.1); padding: clamp(0.8rem, 2vw, 1rem); border-radius: clamp(8px, 1.5vw, 12px); text-align: center;">
                    <i class="fas fa-map-marker-alt" style="color: #3498db; margin-right: 0.5rem;"></i><%=listing.location%>
                </p>
                
                <p class="card-text" style="color: #2c3e50; font-size: clamp(0.9rem, 2vw, 1.1rem); background: rgba(46, 204, 113, 0.1); padding: clamp(0.8rem, 2vw, 1rem); border-radius: clamp(8px, 1.5vw, 12px); text-align: center;">
                    <i class="fas fa-flag" style="color: #2ecc71; margin-right: 0.5rem;"></i><%=listing.country%>
                </p>
            </div>
        </div>
    </div>
    
    <% if(currUser && listing.owner._id.equals(currUser._id)) {%>
    <div class="btns col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 px-3" style="display: flex; flex-wrap: wrap; gap: 1rem; justify-content: center; margin: 1.5rem auto;">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn" style="padding: clamp(0.6rem, 2vw, 0.75rem) clamp(1.5rem, 3vw, 2rem); border-radius: 50px; font-weight: 600; box-shadow: 0 4px 15px rgba(254, 66, 77, 0.3); transition: all 0.3s ease; font-size: clamp(0.8rem, 2vw, 1rem); min-width: fit-content;">Edit</a>
        
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" style="margin: 0;">
            <button class="btn btn-dark" style="padding: clamp(0.6rem, 2vw, 0.75rem) clamp(1.5rem, 3vw, 2rem); border-radius: 50px; font-weight: 600; background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%) !important; border: none; box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3); transition: all 0.3s ease; font-size: clamp(0.8rem, 2vw, 1rem); min-width: fit-content;">Delete</button>
        </form>
    </div>
    <%} %>
    
    <%if(currUser) {%>
    <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 mb-3 mt-3 px-3" style="background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%); padding: clamp(1.5rem, 3vw, 2.5rem); border-radius: clamp(15px, 3vw, 25px); box-shadow: 0 8px 25px rgba(0,0,0,0.08); margin: 1.5rem auto;">
        <hr style="border: none; height: 2px; background: linear-gradient(90deg, transparent, #fe424d, transparent); margin: clamp(1rem, 2vw, 2rem) 0;"/>
        <h4 style="color: #2c3e50; font-weight: 700; margin-bottom: clamp(1rem, 2vw, 2rem); text-align: center; font-size: clamp(1.1rem, 3vw, 1.5rem);">Leave a Review</h4>
        
        <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label class="form-label" style="font-weight: 600; color: #2c3e50; margin-bottom: 1rem; display: block; font-size: clamp(0.9rem, 2vw, 1rem);">Rating</label>
                <div class="star-rating" style="display: flex; justify-content: center; gap: 0.5rem; font-size: clamp(1.8rem, 5vw, 2.5rem); flex-wrap: wrap;">
                    <% for(let i = 1; i <= 5; i++) { %>
                        <input type="radio" id="rating<%=i%>" name="review[rating]" value="<%=i%>" style="display: none;" <%= i === 1 ? 'checked' : '' %>>
                        <label for="rating<%=i%>" style="cursor: pointer; color: <%= i === 1 ? '#ffd700' : '#ddd' %>; transition: all 0.3s ease;" 
                               onmouseover="highlightStars(<%=i%>)" 
                               onmouseout="resetStars()">★</label>
                    <% } %>
                </div>
                <div class="invalid-feedback" style="color: #fe424d; font-weight: 500; font-size: clamp(0.8rem, 1.5vw, 0.9rem); text-align: center; margin-top: 0.5rem;">Please select a rating</div>
            </div>
            
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label" style="font-weight: 600; color: #2c3e50; margin-bottom: 0.5rem; font-size: clamp(0.9rem, 2vw, 1rem);">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required style="padding: 0.8rem; border: 2px solid #e9ecef; border-radius: 12px; transition: all 0.3s ease; font-size: clamp(0.9rem, 2vw, 1rem); min-height: 100px;"></textarea>
                <div class="invalid-feedback" style="color: #fe424d; font-weight: 500; font-size: clamp(0.8rem, 1.5vw, 0.9rem);">Please add some comments for review</div>
            </div>
            
            <button type="submit" class="btn btn-outline-dark w-100" style="padding: clamp(0.7rem, 2vw, 0.75rem) clamp(1rem, 3vw, 2rem); border-radius: 50px; font-weight: 600; border: 2px solid #fe424d; color: #fe424d; transition: all 0.3s ease; font-size: clamp(0.9rem, 2vw, 1rem);">Submit Review</button>
        </form>
    </div>
    <%} %>
    
    <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 mb-3 mt-3 px-3">
        <hr style="border: none; height: 2px; background: linear-gradient(90deg, transparent, #fe424d, transparent); margin: clamp(1rem, 2vw, 2rem) 0;"/>
        <p style="color: #2c3e50; font-size: clamp(1.1rem, 3vw, 1.5rem); font-weight: 700; margin-bottom: clamp(1rem, 2vw, 2rem);">All Reviews</p>
        
        <div class="row mx-0" style="gap: 1rem; justify-content: center;">
            <% for( review of listing.review) { %>
            <div class="card col-12 col-sm-10 col-md-5 mb-3 px-0" style="border-radius: clamp(12px, 2vw, 20px); overflow: hidden; box-shadow: 0 6px 20px rgba(0,0,0,0.08); border: none; transition: all 0.3s ease; background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%); margin: 0 auto;">
                <div class="card-body" style="padding: clamp(1rem, 2vw, 1.5rem);">
                    <h5 class="card-title" style="color: #fe424d; font-weight: 600; margin-bottom: 0.8rem; font-size: clamp(0.9rem, 2vw, 1.1rem);">@<%=review.author.username%></h5>
                    
                    <div class="star-rating-display" style="color: #ffd700; font-size: clamp(1.2rem, 3vw, 1.5rem); margin-bottom: 0.8rem; display: flex; gap: 0.1rem;">
                        <% for(let i = 1; i <= 5; i++) { %>
                            <span style="color: <%= i <= review.rating ? '#ffd700' : '#ddd' %>;">★</span>
                        <% } %>
                        <span style="color: #666; font-size: clamp(0.7rem, 1.5vw, 0.9rem); margin-left: 0.5rem; align-self: center;">(<%=review.rating%>/5)</span>
                    </div>
                    
                    <p class="card-text" style="color: #555; line-height: 1.5; background: rgba(254, 66, 77, 0.05); padding: clamp(0.8rem, 1.5vw, 1rem); border-radius: clamp(8px, 1.5vw, 12px); border-left: 3px solid #fe424d; font-size: clamp(0.8rem, 1.8vw, 1rem);">
                        <%=review.comment%>
                    </p>
                </div>
                
                <form class="mb-3" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" style="padding: 0 clamp(1rem, 2vw, 1.5rem);">
                    <% if(currUser && review.author._id.equals(currUser._id)) {%>
                    <button class="btn btn-sm btn-dark w-100" style="padding: 0.4rem 0.8rem; border-radius: 20px; font-weight: 500; background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%) !important; border: none; box-shadow: 0 3px 10px rgba(231, 76, 60, 0.3); transition: all 0.3s ease; font-size: clamp(0.7rem, 1.5vw, 0.8rem);">
                        Delete Review
                    </button>
                    <%} %>
                </form>
            </div>
            <% } %>
        </div>
    </div>
</div>

<script>
let currentRating = 1; 

function highlightStars(rating) {
    const stars = document.querySelectorAll('.star-rating label');
    stars.forEach((star, index) => {
        const starNumber = index + 1;
        if (starNumber <= rating) {
            star.style.color = '#ffd700';
        } else {
            star.style.color = '#ddd';
        }
    });
}

function resetStars() {
    const stars = document.querySelectorAll('.star-rating label');
    stars.forEach((star, index) => {
        const starNumber = index + 1;
        if (starNumber <= currentRating) {
            star.style.color = '#ffd700';
        } else {
            star.style.color = '#ddd';
        }
    });
}

document.addEventListener('DOMContentLoaded', function() {
    const starInputs = document.querySelectorAll('.star-rating input[type="radio"]');
    const starLabels = document.querySelectorAll('.star-rating label');
    
    starLabels.forEach((label, index) => {
        label.addEventListener('click', function() {
            const rating = index + 1;
            currentRating = rating;
            
            starInputs.forEach((input, inputIndex) => {
                input.checked = (inputIndex === index);
            });
            
            resetStars();
        });
    });
    
    const form = document.querySelector('form.needs-validation');
    if (form) {
        form.addEventListener('submit', function(event) {
            const rating = document.querySelector('input[name="review[rating]"]:checked');
            const comment = document.getElementById('comment').value;
            
            if (!rating || !comment.trim()) {
                event.preventDefault();
                event.stopPropagation();
                
                if (!rating) {
                    document.querySelector('.star-rating').style.border = '2px solid #fe424d';
                    document.querySelector('.star-rating').style.borderRadius = '8px';
                    document.querySelector('.star-rating').style.padding = '5px';
                }
                
                if (!comment.trim()) {
                    document.getElementById('comment').style.borderColor = '#fe424d';
                }
            }
            
            form.classList.add('was-validated');
        });
    }
});
</script>

<style>
.form-control:focus {
    border-color: #fe424d !important;
    box-shadow: 0 0 0 0.2rem rgba(254, 66, 77, 0.15) !important;
    transform: translateY(-2px);
}

.btn:hover {
    transform: translateY(-2px) !important;
    box-shadow: 0 6px 20px rgba(0,0,0,0.15) !important;
}

.card:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.15) !important;
}

.star-rating label:hover,
.star-rating label:hover ~ label {
    color: #ffd700 !important;
}

@media (max-width: 768px) {
    .row.mt-3 {
        margin-top: 1rem !important;
    }
    
    .btns {
        flex-direction: column;
        align-items: center;
    }
    
    .btns .btn {
        width: 200px;
        max-width: 100%;
    }
    
    .star-rating {
        gap: 0.3rem !important;
    }
}

@media (max-width: 576px) {
    .row.mt-3 {
        margin-top: 0.5rem !important;
    }
    
    .card-body {
        padding: 1rem !important;
    }
    
    .star-rating {
        gap: 0.2rem !important;
        font-size: 1.8rem !important;
    }
    
    .star-rating-display {
        font-size: 1.2rem !important;
    }
}

@media (max-width: 360px) {
    body {
        font-size: 14px;
    }
    
    .card-body {
        padding: 0.8rem !important;
    }
    
    .btns .btn {
        width: 180px;
    }
    
    .star-rating {
        font-size: 1.5rem !important;
    }
}

html, body {
    max-width: 100%;
    overflow-x: hidden;
}

.container-fluid {
    padding-left: 10px;
    padding-right: 10px;
}
</style>
</body>