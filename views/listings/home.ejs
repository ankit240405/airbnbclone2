<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SereneStay</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/jpeg" href="/images/iconn.jpg">

    <style>
        
        :root {
            --primary: #FF6B6B;
            --primary-light: #FF8E8E;
            --primary-dark: #E55C5C;
            --secondary: #4ECDC4;
            --secondary-light: #6FE0D8;
            --accent: #FFD166;
            --dark: #1A1A2E;
            --dark-light: #2D3047;
            --light: #FFFFFF;
            --gray: #A0A0A0;
            --gray-light: #F8F9FA;
            --gradient: linear-gradient(135deg, var(--primary), var(--secondary));
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --shadow-heavy: 0 20px 50px rgba(0, 0, 0, 0.15);
            --transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            --border-radius: clamp(12px, 3vw, 20px);
        }

      
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--light);
            color: var(--dark);
            line-height: 1.6;
            overflow-x: hidden;
        }

        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            padding: clamp(1rem, 3vw, 1.5rem) clamp(3%, 5vw, 5%);
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: var(--shadow);
            z-index: 1000;
            transition: var(--transition);
        }

        .logo {
            display: flex;
            align-items: center;
            font-size: clamp(1.5rem, 4vw, 2rem);
            font-weight: 800;
            color: var(--primary);
            text-decoration: none;
            letter-spacing: -1px;
        }

        .logo i {
            margin-right: 0.5rem;
            font-size: clamp(1.6rem, 4vw, 2.2rem);
        }

        .nav-links {
            display: flex;
            gap: clamp(1rem, 3vw, 2.5rem);
        }

        .nav-links a {
            text-decoration: none;
            color: var(--dark);
            font-weight: 600;
            transition: var(--transition);
            position: relative;
            font-size: clamp(0.9rem, 2vw, 1.1rem);
            white-space: nowrap;
        }

        .nav-links a:hover {
            color: var(--primary);
        }

        .nav-links a::after {
            content: '';
            position: absolute;
            width: 0;
            height: 3px;
            bottom: -5px;
            left: 0;
            background: var(--gradient);
            transition: var(--transition);
            border-radius: 3px;
        }

        .nav-links a:hover::after {
            width: 100%;
        }

        .auth-buttons {
            display: flex;
            gap: clamp(0.5rem, 2vw, 1rem);
        }

        .btn {
            padding: clamp(0.6rem, 2vw, 0.8rem) clamp(1.2rem, 3vw, 1.8rem);
            border-radius: 50px;
            font-weight: 700;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            font-size: clamp(0.8rem, 2vw, 1rem);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            white-space: nowrap;
        }

        .btn-login {
            background: transparent;
            color: var(--dark);
            border: 2px solid var(--dark);
        }

        .btn-login:hover {
            background: var(--dark);
            color: var(--light);
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .btn-signup {
            background: var(--gradient);
            color: var(--light);
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
        }

        .btn-signup:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(255, 107, 107, 0.5);
        }

       
        .hero {
            min-height: 100vh;
            background: linear-gradient(rgba(26, 26, 46, 0.8), rgba(26, 26, 46, 0.9)), 
                        url('https://images.unsplash.com/photo-1571896349842-33c89424de2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2080&q=80');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            display: flex;
            align-items: center;
            padding: 0 clamp(3%, 5vw, 5%);
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23ff6b6b' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
            opacity: 0.3;
        }

        .hero-content {
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
            color: var(--light);
            animation: fadeInUp 1s ease-out;
        }

        .hero-text h1 {
            font-size: clamp(2.5rem, 8vw, 4.5rem);
            margin-bottom: clamp(1rem, 3vw, 1.5rem);
            line-height: 1.1;
            font-weight: 800;
            background: linear-gradient(to right, var(--light), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero-text p {
            font-size: clamp(1rem, 3vw, 1.3rem);
            margin-bottom: clamp(2rem, 5vw, 3rem);
            opacity: 0.9;
            max-width: min(700px, 90vw);
            margin-left: auto;
            margin-right: auto;
        }

        .cta-buttons {
            display: flex;
            gap: clamp(1rem, 3vw, 1.5rem);
            justify-content: center;
            margin-top: clamp(2rem, 5vw, 3rem);
            flex-wrap: wrap;
        }

        .cta-btn {
            padding: clamp(1rem, 3vw, 1.2rem) clamp(1.5rem, 4vw, 2.5rem);
            border-radius: 50px;
            font-weight: 700;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            font-size: clamp(1rem, 2.5vw, 1.1rem);
            display: flex;
            align-items: center;
            gap: 0.7rem;
            text-decoration: none;
            white-space: nowrap;
        }

        .cta-primary {
            background: var(--gradient);
            color: var(--light);
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
        }

        .cta-primary:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(255, 107, 107, 0.5);
        }

        .cta-secondary {
            background: transparent;
            color: var(--light);
            border: 2px solid var(--light);
        }

        .cta-secondary:hover {
            background: var(--light);
            color: var(--dark);
            transform: translateY(-5px);
        }

        .hero-stats {
            display: flex;
            gap: clamp(1.5rem, 4vw, 3rem);
            justify-content: center;
            margin-top: clamp(2rem, 5vw, 4rem);
            flex-wrap: wrap;
        }

        .stat {
            text-align: center;
            flex: 1;
            min-width: 100px;
        }

        .stat-value {
            font-size: clamp(1.8rem, 5vw, 2.5rem);
            font-weight: 700;
            color: var(--accent);
        }

        .stat-label {
            font-size: clamp(0.8rem, 2vw, 1rem);
            opacity: 0.8;
        }

        
        .features {
            padding: clamp(3rem, 8vw, 6rem) clamp(3%, 5vw, 5%);
            background-color: var(--light);
        }

        .section-title {
            font-size: clamp(1.8rem, 5vw, 2.5rem);
            margin-bottom: 1rem;
            text-align: center;
            position: relative;
            font-weight: 800;
        }

        .section-title::after {
            content: '';
            position: absolute;
            width: clamp(60px, 12vw, 80px);
            height: 5px;
            background: var(--gradient);
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 5px;
        }

        .section-subtitle {
            text-align: center;
            color: var(--gray);
            max-width: min(600px, 90vw);
            margin: clamp(1.5rem, 4vw, 2rem) auto clamp(2rem, 6vw, 4rem);
            font-size: clamp(1rem, 2.5vw, 1.1rem);
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(min(300px, 100%), 1fr));
            gap: clamp(1.5rem, 4vw, 2.5rem);
        }

        .feature-card {
            background: var(--light);
            border-radius: var(--border-radius);
            padding: clamp(1.5rem, 4vw, 2.5rem) clamp(1.5rem, 3vw, 2rem);
            box-shadow: var(--shadow);
            transition: var(--transition);
            text-align: center;
            border: 1px solid rgba(0, 0, 0, 0.05);
            position: relative;
            overflow: hidden;
        }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: var(--gradient);
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: var(--shadow-heavy);
        }

        .feature-icon {
            font-size: clamp(2.5rem, 6vw, 3rem);
            margin-bottom: clamp(1rem, 3vw, 1.5rem);
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .feature-title {
            font-size: clamp(1.2rem, 3vw, 1.5rem);
            margin-bottom: 1rem;
            color: var(--dark);
            font-weight: 700;
        }

        .feature-description {
            color: var(--gray);
            font-size: clamp(0.9rem, 2vw, 1rem);
        }

        .cta-section {
            padding: clamp(3rem, 8vw, 6rem) clamp(3%, 5vw, 5%);
            background: var(--gradient);
            color: var(--light);
            text-align: center;
        }

        .cta-section h2 {
            font-size: clamp(1.8rem, 5vw, 2.5rem);
            margin-bottom: clamp(1rem, 3vw, 1.5rem);
            font-weight: 800;
        }

        .cta-section p {
            font-size: clamp(1rem, 2.5vw, 1.2rem);
            margin-bottom: clamp(1.5rem, 4vw, 2.5rem);
            max-width: min(600px, 90vw);
            margin-left: auto;
            margin-right: auto;
            opacity: 0.9;
        }

        .cta-section-buttons {
            display: flex;
            gap: clamp(1rem, 3vw, 1.5rem);
            justify-content: center;
            flex-wrap: wrap;
        }

        .cta-section-btn {
            padding: clamp(0.8rem, 2vw, 1rem) clamp(1.5rem, 3vw, 2rem);
            border-radius: 50px;
            font-weight: 700;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            font-size: clamp(0.9rem, 2vw, 1rem);
            display: flex;
            align-items: center;
            gap: 0.7rem;
            text-decoration: none;
            white-space: nowrap;
        }

        .cta-light {
            background: var(--light);
            color: var(--primary);
        }

        .cta-light:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .cta-outline {
            background: transparent;
            color: var(--light);
            border: 2px solid var(--light);
        }

        .cta-outline:hover {
            background: var(--light);
            color: var(--primary);
            transform: translateY(-3px);
        }

        /* Animations */
        @keyframes fadeInUp {
            from { 
                opacity: 0;
                transform: translateY(50px);
            }
            to { 
                opacity: 1;
                transform: translateY(0);
            }
        }

        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            font-size: 1.5rem;
            color: var(--dark);
            cursor: pointer;
        }

        @media (max-width: 1024px) {
            .hero-text h1 {
                font-size: clamp(2.2rem, 6vw, 3.5rem);
            }
        }

        @media (max-width: 768px) {
            .nav-links {
                display: none;
            }
            
            .mobile-menu-btn {
                display: block;
            }
            
            .hero-text h1 {
                font-size: clamp(2rem, 5vw, 2.8rem);
            }
            
            .section-title {
                font-size: clamp(1.5rem, 4vw, 2rem);
            }
            
            .features-grid {
                grid-template-columns: 1fr;
            }
            
            .cta-buttons, .cta-section-buttons {
                flex-direction: column;
                align-items: center;
            }
            
            .hero-stats {
                flex-direction: column;
                gap: 1.5rem;
            }
            
            .auth-buttons {
                display: none;
            }
        }

        @media (max-width: 480px) {
            .logo {
                font-size: 1.3rem;
            }
            
            .logo i {
                font-size: 1.4rem;
            }
            
            .hero {
                background-attachment: scroll;
            }
            
            .feature-card {
                padding: 1.5rem 1rem;
            }
        }

        @media (max-width: 360px) {
            .cta-btn, .cta-section-btn {
                width: 100%;
                justify-content: center;
            }
            
            .hero-stats .stat {
                min-width: 80px;
            }
        }

        html, body {
            max-width: 100%;
            overflow-x: hidden;
        }
    </style>
</head>
<body>
    <header>
        <a href="/listings" class="logo">
            <i class="fas fa-compass"></i>
            SereneStay
        </a>
        
        <nav class="nav-links">
            <a href="/listings">Discover</a>
            <a href="/listings">Destinations</a>
            <a href="#">Experiences</a>
            <a href="/login">Host</a>
            <a href="#">Help</a>
        </nav>
        
        <div class="auth-buttons">
            <a href="/login" class="btn btn-login">
                <i class="fas fa-sign-in-alt"></i>
                Log In
            </a>
            <a href="/signup" class="btn btn-signup">
                <i class="fas fa-user-plus"></i>
                Sign Up
            </a>
        </div>
        
        <button class="mobile-menu-btn">
            <i class="fas fa-bars"></i>
        </button>
    </header>

    <section class="hero">
        <div class="hero-content">
            <div class="hero-text">
                <h1>Discover Extraordinary Stays Around the World</h1>
                <p>Find and book unique accommodations, from luxury villas to cozy cabins, for your next adventure.</p>
                
              
                
                <div class="hero-stats">
                    <div class="stat">
                        <div class="stat-value">50K+</div>
                        <div class="stat-label">Properties</div>
                    </div>
                    <div class="stat">
                        <div class="stat-value">120+</div>
                        <div class="stat-label">Countries</div>
                    </div>
                    <div class="stat">
                        <div class="stat-value">4.9</div>
                        <div class="stat-label">Average Rating</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="features">
        <h2 class="section-title">Why Choose SereneStay</h2>
        <p class="section-subtitle">We provide exceptional experiences with our carefully curated properties and dedicated customer service</p>
        
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-home"></i>
                </div>
                <h3 class="feature-title">Unique Stays</h3>
                <p class="feature-description">Discover one-of-a-kind accommodations that you won't find anywhere else, from treehouses to houseboats.</p>
            </div>
            
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3 class="feature-title">Secure Booking</h3>
                <p class="feature-description">Your payments and personal information are protected with our bank-level security system.</p>
            </div>
            
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-headset"></i>
                </div>
                <h3 class="feature-title">24/7 Support</h3>
                <p class="feature-description">Our dedicated customer support team is available around the clock to assist you with any issues.</p>
            </div>
        </div>
    </section>

    <section class="cta-section">
        <h2>Ready to Start Your Journey?</h2>
        <p>Join thousands of travelers who have found their perfect stay with SereneStay</p>
        
        <div class="cta-section-buttons">
            <a href="/signup" class="cta-section-btn cta-light">
                <i class="fas fa-user-plus"></i>
                Create Account
            </a>
            <a href="/login" class="cta-section-btn cta-outline">
                <i class="fas fa-sign-in-alt"></i>
                Sign In
            </a>
        </div>
    </section>

    <script>
        window.addEventListener('scroll', function() {
            const header = document.querySelector('header');
            if (window.scrollY > 50) {
                header.style.padding = 'clamp(0.8rem, 2vw, 1rem) clamp(3%, 5vw, 5%)';
                header.style.boxShadow = '0 10px 30px rgba(0, 0, 0, 0.15)';
            } else {
                header.style.padding = 'clamp(1rem, 3vw, 1.5rem) clamp(3%, 5vw, 5%)';
                header.style.boxShadow = 'var(--shadow)';
            }
        });

        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.feature-card').forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(card);
        });

        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const navLinks = document.querySelector('.nav-links');
        const authButtons = document.querySelector('.auth-buttons');

        mobileMenuBtn.addEventListener('click', function() {
            const isVisible = navLinks.style.display === 'flex';
            
            if (isVisible) {
                navLinks.style.display = 'none';
                authButtons.style.display = 'none';
            } else {
                navLinks.style.display = 'flex';
                authButtons.style.display = 'flex';
                navLinks.style.flexDirection = 'column';
                authButtons.style.flexDirection = 'column';
                navLinks.style.position = 'absolute';
                navLinks.style.top = '100%';
                navLinks.style.left = '0';
                navLinks.style.width = '100%';
                navLinks.style.background = 'rgba(255, 255, 255, 0.98)';
                navLinks.style.padding = '2rem';
                navLinks.style.gap = '1.5rem';
                authButtons.style.position = 'absolute';
                authButtons.style.top = 'calc(100% + 200px)';
                authButtons.style.left = '0';
                authButtons.style.width = '100%';
                authButtons.style.background = 'rgba(255, 255, 255, 0.98)';
                authButtons.style.padding = '2rem';
                authButtons.style.gap = '1rem';
            }
        });

        document.querySelectorAll('.nav-links a, .auth-buttons a').forEach(link => {
            link.addEventListener('click', function() {
                if (window.innerWidth <= 768) {
                    navLinks.style.display = 'none';
                    authButtons.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>