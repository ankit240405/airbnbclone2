<% layout("/layouts/boilerplate") %>
<div class="row mt-3 mx-0">
<div class="alert alert-danger col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 px-3" role="alert" style="border-radius: 15px; border: none; box-shadow: 0 8px 25px rgba(220, 53, 69, 0.2); background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); color: white; padding: clamp(1rem, 3vw, 1.5rem); margin: 0 auto;">
<p class="alert-heading mb-0" style="font-weight: 600; font-size: clamp(0.9rem, 2vw, 1.1rem); text-align: center;"><%=message%></p>
</div>
</div>

<style>
@media (max-width: 768px) {
    .row.mt-3 {
        margin-top: 1rem !important;
    }
    
    .alert {
        margin: 0 10px !important;
    }
}

@media (max-width: 576px) {
    .row.mt-3 {
        margin-top: 0.5rem !important;
    }
    
    .alert {
        margin: 0 5px !important;
        padding: 0.8rem !important;
        border-radius: 12px !important;
    }
}

@media (max-width: 360px) {
    .alert {
        padding: 0.7rem !important;
    }
    
    .alert-heading {
        font-size: 0.85rem !important;
    }
}

html, body {
    max-width: 100%;
    overflow-x: hidden;
}
</style>